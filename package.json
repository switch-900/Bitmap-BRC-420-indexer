{
  "name": "brc-420-indexer",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node --max-old-space-size=8192 --optimize-for-size server.js",
    "indexer": "RUN_INDEXER=true node index-runner.js",
    "indexer:dev": "NODE_ENV=development RUN_INDEXER=true node --max-old-space-size=4096 index-runner.js",
    "indexer:prod": "NODE_ENV=production RUN_INDEXER=true node --max-old-space-size=8192 --optimize-for-size index-runner.js",
    "setup-db": "node db/setup.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:indexer": "NODE_ENV=development nodemon index-runner.js",
    "test": "node server-simple.js",
    "lint": "echo \"Linting not configured\" && exit 0",
    "docker:build": "docker build -t brc-420-indexer .",
    "docker:run": "docker run -p 8080:8080 brc-420-indexer"
  },
  "keywords": [
    "bitcoin",
    "ordinals",
    "brc-420",
    "indexer",
    "inscriptions",
    "bitmaps",
    "parcels"
  ],
  "author": "BRC-420 Indexer Team",
  "license": "MIT",
  "description": "High-performance Bitcoin BRC-420 inscription indexer with support for deploys, mints, bitmaps, and parcels",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "bull": "^4.16.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "joi": "^17.13.3",
    "node-cache": "^5.1.2",
    "p-limit": "^3.1.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  }
}