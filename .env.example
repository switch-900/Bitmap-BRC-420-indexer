# BRC-420 Indexer Configuration - Production (Umbrel Node)
# This configuration is used when deployed on the Umbrel node
# The docker-compose.yml will override these with internal Docker network addresses

# Database settings
DB_PATH=/app/db/brc420.db

# Primary API endpoints (Umbrel internal Docker network)
# These are overridden in docker-compose.yml for production
ORD_API_URL=http://ordinals_ord_1:4000
API_WALLET_URL=http://mempool_web_1:3006/api

# HTTP API Configuration (Umbrel uses only HTTP APIs, not Bitcoin RPC)
USE_LOCAL_APIS_ONLY=true

# Fallback API endpoints (external services - only if local unavailable)
API_URL=https://ordinals.com

# Development/Testing alternatives (from laptop to Umbrel node)
# For testing from your laptop, use .env.development instead
# ORD_API_URL=http://umbrel.local:4000
# API_WALLET_URL=http://umbrel.local:3006/api

# Indexing settings
START_BLOCK=792435
RETRY_BLOCK_DELAY=3
MAX_RETRIES=3
RETRY_DELAY=5000
CONCURRENCY_LIMIT=5

# Server settings
PORT=8080
NODE_ENV=production

# Enable indexer process (should be true for Umbrel deployment)
RUN_INDEXER=true
